# ============================================
# MICROSERVICES GATEWAY CONFIGURATION
# ============================================

# For Vite projects (use VITE_ prefix)
VITE_GATEWAY_URL=http://localhost:8862/api

# For Create React App projects (use REACT_APP_ prefix)
REACT_APP_GATEWAY_URL=http://localhost:8862/api

# ============================================
# MICROSERVICES PORTS REFERENCE
# ============================================
# Eureka Service Discovery: 8761
# Gateway Service: 8862 (CORRECT PORT)
# USER SERVICE: 8001
# SALON SERVICE: 8002
# SERVICE OFFERING: 8003
# CATEGORY SERVICE: 8004
# BOOKING SERVICE: 8005
# PAYMENT SERVICE: 8006
# NOTIFICATION SERVICE: 8007

# ============================================
# APPLICATION ENVIRONMENT
# ============================================
VITE_ENV=development
REACT_APP_ENV=development
VITE_DEBUG=true
REACT_APP_DEBUG=true

# ============================================
# FEATURE FLAGS
# ============================================
VITE_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_PAYMENTS=true
REACT_APP_ENABLE_PAYMENTS=true

# ============================================
# TOKEN CONFIGURATION (in minutes)
# ============================================
VITE_TOKEN_EXPIRY=60
REACT_APP_TOKEN_EXPIRY=60
VITE_REFRESH_TOKEN_EXPIRY=1440
REACT_APP_REFRESH_TOKEN_EXPIRY=1440
