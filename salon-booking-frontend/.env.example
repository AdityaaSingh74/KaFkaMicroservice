# ============================================
# MICROSERVICES GATEWAY CONFIGURATION
# ============================================

# Gateway URL (CORRECTED: Port 8762)
REACT_APP_GATEWAY_URL=http://localhost:8762/api

# ============================================
# MICROSERVICES PORTS REFERENCE
# ============================================
# Eureka Service Discovery: 8761
# Gateway Service: 8762 (NOT 8888)
# USER SERVICE: 8001
# SALON SERVICE: 8002
# SERVICE OFFERING: 8003
# CATEGORY SERVICE: 8004
# BOOKING SERVICE: 8005
# PAYMENT SERVICE: 8006
# NOTIFICATION SERVICE: 8007

# ============================================
# APPLICATION ENVIRONMENT
# ============================================
REACT_APP_ENV=development
REACT_APP_DEBUG=true

# ============================================
# FEATURE FLAGS
# ============================================
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_PAYMENTS=true

# ============================================
# TOKEN CONFIGURATION (in minutes)
# ============================================
REACT_APP_TOKEN_EXPIRY=60
REACT_APP_REFRESH_TOKEN_EXPIRY=1440
